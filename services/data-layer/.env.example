# Data Layer Environment Configuration

# General Configuration
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=screenshot_to_code
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis Configuration
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_KEY_PREFIX=stc
REDIS_CONNECT_TIMEOUT=10000

# Storage Configuration
STORAGE_BACKEND=local  # local, azure, s3
LOCAL_STORAGE_PATH=./uploads
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg,image/webp,image/gif

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_NAME=screenshots
AZURE_STORAGE_CDN_URL=

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_S3_CDN_URL=

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key
SESSION_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
APPLICATIONINSIGHTS_CONNECTION_STRING=