# Image Generator Service Environment Variables

# Service Configuration
SERVICE_NAME=image-generator
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003

# Security
ENABLE_AUTHENTICATION=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Azure AD Configuration (if authentication enabled)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id

# Image Provider Configuration
ENABLED_PROVIDERS=dalle3,flux_schnell
DEFAULT_PROVIDER=dalle3

# DALL-E 3 Configuration (OpenAI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
DALLE3_MODEL=dall-e-3
DALLE3_DEFAULT_SIZE=1024x1024
DALLE3_DEFAULT_QUALITY=standard
DALLE3_DEFAULT_STYLE=vivid

# DALL-E 3 Configuration (Azure OpenAI)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-dalle3-deployment
AZURE_OPENAI_API_VERSION=2024-10-21

# Flux Schnell Configuration
FLUX_API_KEY=your-flux-api-key
FLUX_BASE_URL=https://api.bfl.ml
FLUX_MODEL=flux-schnell
FLUX_DEFAULT_SIZE=1024x1024
FLUX_SEED=

# Image Generation Configuration
MAX_IMAGES_PER_REQUEST=4
DEFAULT_IMAGES_COUNT=1
ENABLE_PROMPT_ENHANCEMENT=true
MAX_PROMPT_LENGTH=4000

# Performance Configuration
REQUEST_TIMEOUT_SECONDS=300
MAX_CONCURRENT_REQUESTS=5
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2.0

# Image Storage Configuration
ENABLE_IMAGE_STORAGE=true
STORAGE_BACKEND=local  # local, azure_blob, s3
LOCAL_STORAGE_PATH=./generated_images

# Azure Blob Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=generated-images

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=screenshot-to-code-images

# Content Moderation
ENABLE_CONTENT_MODERATION=true
BLOCKED_WORDS=

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
ENABLE_DETAILED_LOGGING=true

# Development/Testing
MOCK_IMAGE_GENERATION=false
ENABLE_DEBUG_MODE=false