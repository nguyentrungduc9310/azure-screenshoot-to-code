# Code Generator Service Environment Variables

# Service Configuration
SERVICE_NAME=code-generator
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8002

# Security
ENABLE_AUTHENTICATION=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Azure AD Configuration (if authentication enabled)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id

# AI Provider Configuration
ENABLED_PROVIDERS=claude,openai,gemini
DEFAULT_PROVIDER=claude

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-2024-11-20
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.0

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_RESOURCE_NAME=your-resource-name
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-10-21

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.0

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.0

# Code Generation Configuration
SUPPORTED_STACKS=html_tailwind,html_css,react_tailwind,vue_tailwind,bootstrap,ionic_tailwind,svg
DEFAULT_STACK=html_tailwind
MAX_VARIANTS=2
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Performance Configuration
REQUEST_TIMEOUT_SECONDS=120
MAX_CONCURRENT_REQUESTS=10
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=1.0

# Image Processing
MAX_IMAGE_SIZE_MB=20
SUPPORTED_IMAGE_FORMATS=PNG,JPEG,JPG,WEBP,GIF

# Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
ENABLE_DETAILED_LOGGING=true

# Development/Testing
MOCK_AI_RESPONSE=false
ENABLE_DEBUG_MODE=false